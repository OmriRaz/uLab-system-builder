<Window x:Name="Main" x:Class="uLab_system_builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uLab_system_builder"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Height="450" Width="656" ResizeMode="NoResize" Title="μLab_system_builder" Background="#FFD4D4D4">
    <Grid HorizontalAlignment="Left" Height="450" Margin="10,0,-6,-29" VerticalAlignment="Top" Width="646">
        <Grid x:Name="ButtonsGrid" HorizontalAlignment="Left" Height="37" Margin="0,367,0,0" VerticalAlignment="Top" Width="619">
            <Button Content="Exit" HorizontalAlignment="Left" Height="37" Margin="505,0,0,0" VerticalAlignment="Top" Width="114" Click="OnClickExit"/>
            <Button Content="Generate" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="500" Click="OnClickGenerate"/>
        </Grid>
        <Grid x:Name="ImageGrid" HorizontalAlignment="Left" Height="324" Margin="0,10,0,0" VerticalAlignment="Top" Width="338">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="324" VerticalAlignment="Top" Width="338">
                <Image x:Name="BoardImage" Margin="-50.157,9,-47.334,7.328" Source="/img/Cropped3.png"/>
            </Border>
        </Grid>
        <Grid x:Name="ConfiguratioGrid" HorizontalAlignment="Left" Height="324" VerticalAlignment="Top" Width="261" Margin="358,10,0,0">
            <CheckBox x:Name="ESP32Box" Content="ESP32" HorizontalAlignment="Left" Height="32" Margin="10,130,0,0" VerticalAlignment="Top" Width="125" Click="OnESP32Click"/>
            <TextBox x:Name="ProjectNameInput" HorizontalAlignment="Left" Height="22" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
            <TextBlock x:Name="ProjectNameText" HorizontalAlignment="Left" Height="19" Margin="10,20,0,0" TextWrapping="Wrap" Text="Project Name:" VerticalAlignment="Top" Width="87"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="324" VerticalAlignment="Top" Width="261">
                <ListBox x:Name="ESP32_PROTOCOL_LIST" Margin="9,165.333,149.001,88.666">
                    <ListBoxItem x:Name="ESP32_ITEM_UART" Content="UART"/>
                    <ListBoxItem x:Name="ESP32_ITEM_I2C" Content="I²C"/>
                    <ListBoxItem x:Name="ESP32_ITEM_SPI" Content="SPI"/>
                </ListBox>
            </Border>
            <TextBlock x:Name="SystemConfigText" HorizontalAlignment="Left" Height="21.5" Margin="73.667,0,0,0" TextWrapping="Wrap" Text="System Configuration" VerticalAlignment="Top" Width="149"/>
            <CheckBox x:Name="_3x_7_SegmentBox" Content="3x 7 Segment" HorizontalAlignment="Left" Height="32" Margin="140,66,0,0" VerticalAlignment="Top" Width="111" Click="OnSevenSegClick"/>
            <CheckBox x:Name="_2x_push_buttonsBox" Content="2x push buttons&#xD;&#xA;" HorizontalAlignment="Left" Height="32" Margin="10,66,0,0" VerticalAlignment="Top" Width="125" Click="OnPushButtonsClick"/>
            <CheckBox x:Name="_8x_LEDsBox" Content="8x LEDs" HorizontalAlignment="Left" Height="32" Margin="10,98,0,0" VerticalAlignment="Top" Width="125" Click="OnLEDsClick"/>
            <CheckBox x:Name="_4x_SwitchesBox" Content="4x Switches" HorizontalAlignment="Left" Height="32" Margin="140,98,0,0" VerticalAlignment="Top" Width="111" Click="OnFourSwitchesClick"/>
            <CheckBox x:Name="GPIOBox" Content="GPIO" HorizontalAlignment="Left" Height="32" Margin="140,130,0,0" VerticalAlignment="Top" Width="111" Click="OnGPIOClick"/>
            <TextBlock x:Name="ESP32_PROTOCOL_TEXT" HorizontalAlignment="Left" Height="19" Margin="10,149.05,0,0" TextWrapping="Wrap" Text="Protocol:" VerticalAlignment="Top" Width="69.667"/>

        </Grid>
        <Border x:Name="GPIOBorder" BorderBrush="#FF10FF10" BorderThickness="2" HorizontalAlignment="Left" Height="24.653" Margin="93.994,72.356,0,0" VerticalAlignment="Top" Width="192.345" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.387"/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform Y="-0.327"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border x:Name="_7SEGBorder" BorderBrush="#FF10FF10" BorderThickness="2" HorizontalAlignment="Left" Height="39.673" Margin="227.77,191.151,0,0" VerticalAlignment="Top" Width="97.3" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.387"/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform Y="-0.327"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border x:Name="_4SwitchesBorder" BorderBrush="#FF10FF10" BorderThickness="2" HorizontalAlignment="Left" Height="44.174" Margin="141.454,186.487,0,0" VerticalAlignment="Top" Width="86.466" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.387"/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform Y="-0.327"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border x:Name="_8xLEDsBorder" BorderBrush="#FF10FF10" BorderThickness="2" HorizontalAlignment="Left" Height="18.301" Margin="232.431,169.062,0,0" VerticalAlignment="Top" Width="68.755" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.387"/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform Y="-0.327"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border x:Name="ESP32Border" BorderBrush="#FF10FF10" BorderThickness="2" HorizontalAlignment="Left" Height="67.602" Margin="7.279,157.403,0,0" VerticalAlignment="Top" Width="131.427" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.387"/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform Y="-0.327"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border x:Name="_2xPushButtonsBorder" BorderBrush="#FF10FF10" BorderThickness="2" HorizontalAlignment="Left" Height="54.641" Margin="264.199,100.727,0,0" VerticalAlignment="Top" Width="46.084" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.387"/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform Y="-0.327"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
    </Grid>
</Window>
